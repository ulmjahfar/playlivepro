/* Fix for tournament action buttons - prevent nesting inside button-like elements */
.tournament-card__actions {
  pointer-events: none;
  position: relative;
}

.tournament-card__actions > button,
.tournament-card__actions > .btn-action {
  pointer-events: auto;
  position: relative;
  isolation: isolate;
  z-index: 1;
}

/* Ensure tournament card itself doesn't act like a button */
.tournament-card--board {
  cursor: default !important;
}

.tournament-card--board:hover {
  cursor: default !important;
}

/* Also fix action-buttons class if it exists */
.action-buttons {
  pointer-events: none;
  position: relative;
}

.action-buttons > button,
.action-buttons > .btn-action {
  pointer-events: auto;
  position: relative;
  isolation: isolate;
}
